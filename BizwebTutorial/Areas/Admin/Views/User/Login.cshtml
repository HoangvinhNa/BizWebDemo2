@model Models.ViewModel.LoginViewModelUser
@{
    Layout = null;
}
<!doctype html>
<html class="no-js">
<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Veneto Admin &middot; Acount Login </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <!--<link rel="shortcut icon" href="/favicon.ico">-->
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="stylesheet" href="~/Assets/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/dist/css/veneto-admin.min.css">
    <link rel="stylesheet" href="~/Assets/dist/demo.css" />
    <link rel="stylesheet" href="~/Assets/dist/assets/font-awesome/css/font-awesome.css">
</head>
<body class="body-sign-up">
    <div class="container">
        <div class="panel panel-default form-container">
            <div class="panel-body">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    <form role="form">
                        <h3 class="text-center margin-xl-bottom">Sign In <span class="semi-bold">now</span></h3>
                        <div class="form-group text-center">
                            <label class="sr-only" for="email">Email Address</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @type = "Email", @placeholder = "Password" })
                        </div>
                        <div class="form-group text-center">
                            <label class="sr-only" for="password">Password</label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-lg", @type = "password", @placeholder = "Password" })
                        </div>
                        @Html.ValidationSummary("", new {@class="text-danger",@style= "list-style: none;" })
                        <button type="submit" name="login" class="btn btn-primary btn-block btn-lg">Login</button>
                    </form>
                }
            </div>
            <div class="panel-body text-center">
                <div class="margin-bottom text-muted">
                    By signing up, you agree to the <a class="text-muted text-underline" href="javascript:;">Terms of Service</a>
                </div>
                <div>
                    Already have an account? <a class="text-primary-dark" href="pages-sign-in.html">Sign in here</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




